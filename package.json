{
    "name": "chat-service",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "tsc -p . && tsc-alias",
        "start:dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
        "start:pro": "node dist/server.js",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "check:all": "eslint src --ext .ts --fix && prettier --write \"src/**/*.ts\"",
        "check:types": "tsc -p . --noEmit",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "dependencies": {
        "@socket.io/redis-adapter": "^8.3.0",
        "@typegoose/typegoose": "^12.21.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.3",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "helmet": "^8.1.0",
        "hpp": "^0.2.3",
        "ioredis": "^5.8.2",
        "jsonwebtoken": "^9.0.3",
        "mongoose": "^9.1.5",
        "morgan": "^1.10.1",
        "reflect-metadata": "^0.2.2",
        "socket.io": "^4.8.1",
        "socket.io-client": "^4.8.3",
        "winston": "^3.19.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.39.1",
        "@types/cookie-parser": "^1.4.10",
        "@types/express": "^4.17.0",
        "@types/hpp": "^0.2.7",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/morgan": "^1.9.10",
        "@types/node": "^20.0.0",
        "@types/socket.io-client": "^3.0.0",
        "@types/supertest": "^6.0.3",
        "@typescript-eslint/eslint-plugin": "^8.49.0",
        "@typescript-eslint/parser": "^8.49.0",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "jest": "^30.2.0",
        "prettier": "^3.7.4",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.6",
        "ts-node-dev": "^2.0.0",
        "tsc-alias": "^1.8.16",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.49.0"
    }
}
